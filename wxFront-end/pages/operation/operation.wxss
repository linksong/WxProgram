.row input {
  font-size: 0.7rem;
  flex-grow: 3;
  border: ipx solid #09c;
  display: inline-block;
  border-radius: 0.3rem;
  box-shadow: 0 0 0.15rem #aaa;
  padding: 0.3rem;
}

.row button {
  padding: 0.2rem;
  margin: 1rem 1rem;
  width: 6rem;
  height: 3rem;
}

.container {
  padding: 1rem;
  font-size: 0.9rem;
  line-height: 1.5rem;
}

.row {
  display: flex;
  align-items: center;
  margin-bottom: 0.8rem;
}

.row text {
  flex-grow: 1;
  text-align: right;
}